/*** Sticky ATC ***/
  const getDistanceToTop = function (element) {
    let distance = element.offsetHeight;
    while (element) {
      distance += element.offsetTop;
      element = element.offsetParent;
    }
    return distance;
  };
  
  if(document.querySelector('.grid.product-single')){
    window.addEventListener("scroll", function () {
    const stickyButton = document.querySelector(".stickyATC");
    if (stickyButton) {
      const buttonParent = stickyButton.parentElement;
      const distanceToTop = getDistanceToTop(buttonParent);
      if (window.pageYOffset > distanceToTop) {
           stickyButton.classList.add('visible')
      } else {
           stickyButton.classList.remove('visible')
      }
    }
  });
  }
